<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    текст для заголовка-->
    <style name="item_text_subtitle_1">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    текст для айтема списка-->
    <style name="text_caption">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Toolbar-->
    <style name="AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <style name="PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />



    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellow_100_A</item>
        <item name="colorPrimaryDark">@color/yellow_100_A_dark</item>
        <item name="colorAccent">@color/yellow_100_A_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ChipsTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:radius">8dp</item>
        <item name="android:width">30dp</item>
        <item name="chipMinHeight">35dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>