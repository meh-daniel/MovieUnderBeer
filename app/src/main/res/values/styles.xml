<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    start layout item_header-->
    <style name="item_header_theme" parent="text_subtitle_1">
        <item name="android:textColor">@color/color_dark_primary</item>
        <item name="android:layout_gravity">left</item>
    </style>
    <!--    end layout item_header-->


    <!--    start layout item_film-->
    <style name="item_film" parent="text_caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--    end layout item_film-->


    <!--    start layout details film-->
    <!--    Главный заголовок-->
    <style name="film_title_localized_name_theme" parent="text_h_6">
        <item name="android:textColor">#DD000000</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!--    Второстепенный заголовок-->
    <style name="film_title_name_theme" parent="text_subtitle_2">
        <item name="android:textColor">#A4000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--    Рейтинг и дата выхода-->
    <style name="film_data_theme" parent="text_subtitle_2">
        <item name="android:textColor">#DF000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--    for film_data_label-->
    <style name="film_data_label_theme" parent="text_caption">
        <item name="android:textColor">#9A000000</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--    for text_overline-->
    <style name="text_overline_theme" parent="text_overline">
        <item name="android:textColor">#D0000000</item>
    </style>
    <!--    for text_overview-->
    <style name="text_overview_theme" parent="text_body_1">
        <item name="android:textColor">#D0000000</item>
    </style>
    <!--    end layout details film-->


    <!--    for view chips-->
    <style name="chips_theme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:radius">16dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#99000000</item>
        <item name="chipBackgroundColor">@color/primary_color</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/select_color_chip_background</item>
    </style>

    <!--    for toolbar-->
    <style name="Theme.MovieUnderBeer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <!--    for error alert dialog-->
    <style name="dialog_error_theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/secondary_color</item>
        <item name="android:textColorPrimary">#FF0000</item>
        <item name="android:background">#5fa3d0</item>
    </style>
    <style name="dialog_error_header_theme" parent="text_h_6">
        <item name="android:textColor">#DD000000</item>
    </style>
    <style name="dialog_error_body_text_theme" parent="text_body_1">
        <item name="android:textColor">#D0000000</item>
    </style>

    <style name="dialog_error_button_theme" parent="text_body_2">
        <item name="android:textColor">#B5000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:radius">16dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/select_second_chip</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>